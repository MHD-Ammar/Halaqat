# ===========================================
# Halaqat Environment Configuration (Example)
# ===========================================
# Copy this file to .env and fill in the values

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=halaqat
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=halaqat_db

# pgAdmin Dashboard (http://localhost:5050)
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=admin@halaqat.local
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password

# API Database Config (used by NestJS)
DB_HOST=localhost
DB_PORT=5432
DB_USER=halaqat
DB_PASSWORD=your_secure_password_here
DB_NAME=halaqat_db
